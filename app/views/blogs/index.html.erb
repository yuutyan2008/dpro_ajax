<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Writer</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.description %></td>
      <td><%= blog.user.name %></td>
      <td><%= link_to 'Show', blog %></td>
      <td id="favorite-<%= blog.id %>">
        <%# render partial: は、部分テンプレート（パーシャル）を表示 %>
        <%# locals:は部分テンプレートに{ blog: blog }と言う変数を渡している %>
        <%= render partial: "favorite", locals: { blog: blog } if blog.user != current_user %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>